    "          match_criteria:{"
    "            filter_regex: \".*/etc/issue\\\\s+.*-k\\\\s+system-locale.*\""
    "            expected_regex: \"\\\\s*-w\\\\s*/etc/issue\\\\s*-p\\\\s*wa\\\\s*(-F\\\\s*key=|-k)\\\\s*[!-~]*\\\\s*\""
    "          }"
    "          match_criteria:{"
